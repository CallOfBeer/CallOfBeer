<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto">

    <!-- Map's view fragment -->
    <RelativeLayout
        android:id="@+id/relativelayout_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
        <com.dev.callofbeer.fragments.CobFloatingMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            sothree:fab_expandDirection="down"
            sothree:fab_labelsPosition="left"
            sothree:fab_labelStyle="@style/menu_labels_style"
            sothree:fab_addButtonColorNormal="@color/A700"
            sothree:fab_addButtonColorPressed="@color/A200"/>

    </RelativeLayout>
</merge>